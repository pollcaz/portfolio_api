<div class='container'>
  <div class='col-xs-6'>
    <div class='row'>
      <div class="col-xs-4 col-md-offset-3">
        <div height="300" width="300">
          <img src="<%= @profile.image_link || @profile.profile_image.url('300x300') %>">
        </div>
      </div>
      <br>
      <div class='panel col-xs-12'>
        <% @tweets.each do |tweet| %>
          <%= render partial: 'tweet', locals: {tweet: tweet} %>
        <% end %>
      </div>
    </div>
  </div>
  <div class='col-xs-6'>
    <div class='row'>
      <div>
        <h2><%= @profile.user_name %></h2>
      </div>
      <div class='panel'>
        <%= @profile.description %>
      </div>
    </div>
  </div>
</div>